rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================================
    // WARNING: UNRESTRICTED ACCESS ENABLED FOR DEVELOPMENT ONLY!
    // THESE RULES MUST BE REPLACED WITH PROPER SECURITY RULES
    // BEFORE DEPLOYING TO PRODUCTION.
    // ============================================================
    //
    // PRODUCTION-READY EXAMPLE:
    // -------------------------
    // For production, implement authentication-based rules like:
    //
    // Option 1: Authenticated users only (requires Firebase Auth)
    //   match /{document=**} {
    //     allow read, write: if request.auth != null;
    //   }
    //
    // Option 2: Read-only for everyone, write for authenticated users
    //   match /{document=**} {
    //     allow read: if true;
    //     allow write: if request.auth != null;
    //   }
    //
    // Option 3: Collection-specific rules with role-based access
    //   match /games/{gameId} {
    //     allow read: if true;
    //     allow create: if request.auth != null;
    //     allow update, delete: if request.auth != null && 
    //       request.auth.uid == resource.data.createdBy;
    //   }
    //   match /players/{playerId} {
    //     allow read: if true;
    //     allow write: if request.auth != null;
    //   }
    //
    // IMPACT ON LOCAL TESTING:
    // -------------------------
    // Production rules requiring authentication will NOT affect local
    // emulator testing because:
    // 1. Firebase emulators automatically bypass authentication checks
    // 2. The emulator UI (localhost:4000) allows full data access
    // 3. Your seed scripts will continue to work without changes
    // 4. Manual testing can use emulator auth tokens if needed
    //
    // To test production rules locally:
    // - Use Firebase Emulator Suite's auth emulator (port 9099)
    // - Generate test tokens via emulator UI
    // - Or disable rules validation: db.useEmulator('localhost', 8080)
    // ============================================================
    
    // Allow read/write access for development
    match /{document=**} {
      allow read, write: if true;
    }
  }
}